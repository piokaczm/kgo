<div class="modal fade" id="contact_form" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">    
      
      <div class="modal-header">
        
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="contact_formLabel">
        Nowa wiadomość do <%= @advert.user.username %></h4>
        
      </div>
      <%= form_for @mail do |f| %>
      <div class="modal-body">
        
        
        <div class="form-group">
        <%= f.label :sender_email, "Twój e-mail", class: "control-label" %>
        <%= f.email_field :sender_email, class: "control-label form_field" %>
        <%= f.label :name, "Twoje imię", class: "control-label" %>
        <%= f.text_field :name, class: "control-label form_field" %>
        </div>
        
        <div class="form-gorup">
        <%= f.label :content, "Treść wiadomości", class: "control-label" %>
        <%= f.text_area :content, class: "control-label form_field", rows: "5" %>
        </div>
        
      </div>
      
      <div class="hidden">
        <%= f.hidden_field :receiver_email, value: @advert.user.email %>
        <%= f.hidden_field :subject, value: @advert.title %>
        <%= f.hidden_field :nickname %>
      </div>
      
      <div class="modal-footer">
      
        <%= f.submit "Wyślij wiadomość", type: 'button', class: 'btn' %>
       
      </div>
        <% end %>
    </div>
  </div>
</div>
