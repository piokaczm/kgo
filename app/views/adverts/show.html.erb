<% provide(:title, @advert.title) %>

<div class="row" id="tekst_tytul">
  <h2 class="center" id="show-advert"><%= @advert.title %></h2>
  <%= link_to :back, class: 'back' do %>
    <p><span class="glyphicon glyphicon-arrow-left"></span> Powrót</p>
  <% end %>
</div>

<%= render 'contact' %>

<div class="row" id="advert_content">
  <div class="col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2">
    <a href='#' class="thumbnail thumb-show" data-toggle="modal" data-target="#imageModal">
    <%= cl_image_tag @advert.picture, crop: :fill, class: "img-responsive" %>
    </a>
  </div>
  
  <%= render 'image_modal' %>
  
   
</div>

<div class="row">
  <div class="col-sm-8 col-sm-offset-2 col-md-5">
    <div class="panel panel-default panel-square" id="opis">
      <div class="panel-heading advert-heading">
      <h3 class="panel-title">Opis:</h3>
      </div>
      <div class="panel-body">
        <%= simple_format(@advert.content) %>
      </div>
    </div>
    </div>
  
  <div class="col-sm-8 col-sm-offset-2 col-md-3 col-md-offset-0">
    
    <div class="panel panel-default first-panel square" id="dane">
      <div class="panel-heading advert-heading">
        <h3 class="panel-title">            
        Podstawowe dane:
        </h3>
      </div>
    <ul class="list-group">
      <%= render "rozmiary" %>
    </ul>
  </div> 
    
  </div> 
  
</div>

<% if logged_in? && (@user.id == @advert.user.id || @user.admin?) %>
<div class="row">
  <div class="col-sm-4 col-sm-offset-2">
    <%= link_to "Usuń ogłoszenie", @advert, method: :delete, data: { confirm: "Czy chesz usunąć to ogłoszenie (#{@advert.title})?" }, type: 'button', class: 'btn btn-advert-edit' %>
    <%= link_to "Edytuj ogłoszenie", edit_advert_path(@advert), type: 'button', class: 'btn btn-advert-edit' %>
  </div>
</div>
<% end %>
