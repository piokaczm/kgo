<% provide(:title, 'Resetuj hasło') %>
<h1 class="center">Podaj nowe hasło</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
    <%= render 'shared/error_msg', object: f.object %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.label :hasło %>
    <%= f.password_field :password, class: 'form-control form_field' %>

    <%= f.label :password_confirmation, "Potwierdź hasło" %>
    <%= f.password_field :password_confirmation, class: 'form-control form_field' %>

    <%= f.submit "Zapisz nowe hasło", class: "btn btn-reg ostatni" %>
    <% end %>
  </div>
</div>