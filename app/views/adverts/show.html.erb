<% provide(:title, @advert.title) %>

<div class="row" id="tekst_tytul">
  <h2 class="center"><%= @advert.title %></h2>
</div>

<div class="row" id="advert_content">
  <div class="col-sm-5 col-sm-offset-2">
    <%= link_to cloudinary_url(@advert.picture), class: "thumbnail" do %>
    <%= cl_image_tag @advert.picture, crop: :fit, class: "img-responsive" %>
    <% end %>
  </div>
  
  <div class="col-sm-3">
    
    <div class="panel panel-default first-panel">
      <div class="panel-heading">
        <h3 class="panel-title">            
        Podstawowe dane:
        </h3>
      </div>
    <ul class="list-group">
      <%= render "rozmiary" %>
    </ul>
  </div>         

    
  </div>
  
</div>

<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
      <h3 class="panel-title">Opis:</h3>
      </div>
      <div class="panel-body">
        <%= simple_format(@advert.content) %>
      </div>
    </div>
    </div>
</div>

<% if @user.id == @advert.user.id %>
<div class="row">
  <div class="col-sm-2">
    <%= link_to "Usuń ogłoszenie", @advert, method: :delete, data: { confirm: "Czy chesz usunąć to ogłoszenie (#{@advert.title})?" } %>
  </div>
</div>
<% end %>
