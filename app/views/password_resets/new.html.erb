<% provide(:title, "Reset hasła") %>


<h1 class="center">Reset hasła</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control form_field przerwa' %>

    <%= f.submit "Wyślij", class: "btn btn-reg ostatni" %>
    <% end %>
  </div>
</div>